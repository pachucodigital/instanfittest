<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools">

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/low_margin"
    android:layout_marginRight="@dimen/low_margin"
    android:layout_marginBottom="@dimen/low_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/txt"
            style="@style/TextTitleAccent"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_small"
            android:layout_margin="@dimen/low_margin"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt"
            android:layout_width="@dimen/width_ic_img"
            android:layout_height="@dimen/height_ic_img"
            android:layout_margin="@dimen/low_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="2dp" />

        <ProgressBar
            android:layout_centerHorizontal="true"

            android:layout_below="@+id/txt"
            android:id="@+id/loader"
            android:layout_width="@dimen/width_ic_img"
            android:layout_height="@dimen/height_ic_img"
            android:layout_margin="@dimen/low_margin"
            android:indeterminateTint="@color/colorAccent" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
</FrameLayout>