<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/low_margin"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"

        android:layout_width="match_parent"
        android:layout_height="@dimen/heigth_card"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="@dimen/medium_margin"
                android:id="@+id/img"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/width_ic_img"
                android:layout_height="@dimen/height_ic_img"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorPrimaryDark"/>
            <ProgressBar
                android:layout_margin="@dimen/medium_margin"
                android:indeterminateTint="@color/colorAccent"
                android:indeterminate="true"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/loader"
                android:layout_width="@dimen/width_ic_img"
                android:layout_height="@dimen/height_ic_img" />



            <TextView
                android:textSize="@dimen/txt_size_header"
                android:layout_margin="@dimen/medium_margin"
                style="@style/TextTitleAccent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

